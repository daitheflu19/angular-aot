{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "build-aot/js"
  },
  "files": [
    "src/app/app.module.ts" ,
    "src/main-aot.ts"
  ],
  "angularCompilerOptions": {
   "genDir": "build-aot/ngfactory",
   "skipMetadataEmit" : true
 }
}